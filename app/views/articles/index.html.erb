<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
        <article>
          <h2><a href="<%= article_path(article) %>"><%= article.title %></a></h2>
          <%= truncate(article.content, length: 100, separator: ' ') %>
          <% if article.image_url.present? %>
            <img src="<%= article.image_url %>" alt="Article Image" class="img-responsive">
          <% end %>
        </article>
      <% end %>
    </div>
  </div>
</div>
