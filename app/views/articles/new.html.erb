<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h1>New article</h1>

        <%= form_with(model: @article, class: "new_article", id: "new_article", url: articles_path, method: :post) do |form| %>
          <div class="mb-3">
            <%= form.label :title, class: "form-label required" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :content, class: "form-label required" %>
            <%= form.text_area :content, class: "form-control", rows: 10 %>
          </div>
          <div class="form-group">
            <%= form.submit "Create Article", class: "btn btn-secondary", data: { disable_with: "Create Article" } %>
          </div>
        <% end %>

        <%= link_to "Back", articles_path %>
      </div>
    </div>
  </div>
